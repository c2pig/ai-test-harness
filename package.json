{
  "name": "ai-test-harness",
  "version": "1.0.0",
  "description": "AI Test Harness - Multi-tenant AI quality assessment framework",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:core": "tsc --build packages/core",
    "build:cli": "tsc --build packages/cli",
    "type-check": "tsc --build",
    "clean": "tsc --build --clean",
    "lint": "eslint packages --ext .ts",
    "lint:fix": "eslint packages --ext .ts --fix",
    "format": "prettier --write \"packages/**/*.ts\"",
    "format:check": "prettier --check \"packages/**/*.ts\"",
    "clean:outputs": "find outputs -type d -exec rm -rf {} + 2>/dev/null || true && echo 'Output folders cleaned'",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "ai",
    "quality",
    "testing",
    "llm",
    "bedrock"
  ],
  "author": "AI Test Harness Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/c2pig/ai-test-harness.git"
  },
  "bugs": {
    "url": "https://github.com/c2pig/ai-test-harness/issues"
  },
  "homepage": "https://github.com/c2pig/ai-test-harness#readme",
  "dependencies": {
    "@aws-sdk/client-bedrock-agent": "^3.918.0",
    "@aws-sdk/client-bedrock-agent-runtime": "^3.600.0",
    "@aws-sdk/client-bedrock-runtime": "^3.600.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.600.0",
    "@aws-sdk/client-dynamodb": "^3.921.0",
    "@aws-sdk/client-secrets-manager": "^3.600.0",
    "@types/glob": "^8.1.0",
    "chart.js": "^4.5.1",
    "chartjs-node-canvas": "^5.0.0",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.1",
    "jsonpath-plus": "^10.3.0",
    "marked": "^12.0.0",
    "pg": "^8.11.0",
    "tsx": "^4.7.0",
    "yaml": "^2.7.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
